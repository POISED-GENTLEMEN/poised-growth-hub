{
  "paths": {
    "uploads": "public/uploads"
  },
  "collections_config": {
    "src_content_posts": {
      "path": "src/content/posts",
      "name": "Blog Posts",
      "icon": "content_paste",
      "disable_url": false,
      "disable_add": false,
      "disable_add_folder": false,
      "disable_file_actions": false
    }
  },
  "timezone": "Etc/UTC",
  "collections": {
    "posts": {
      "path": "src/content/posts",
      "output": false,
      "name": "Posts",
      "icon": "book",
      "singular_name": "Post",
      "create": {
        "trigger": "button",
        "default_values": {
          "date": "NOW",
          "draft": false
        }
      },
      "schema": {
        "title": "string",
        "slug": "string",
        "date": "date",
        "coverImage": "image",
        "description": "text",
        "tags": {
          "type": "array",
          "items": "string"
        },
        "body": "markdown"
      }
    }
  }
}
